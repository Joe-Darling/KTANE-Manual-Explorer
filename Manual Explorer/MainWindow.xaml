            <CheckBox Grid.Column="0" Grid.Row="21" x:Name="LIT_CAR" Content="" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>
            <CheckBox Grid.Column="0" Grid.Row="21" x:Name="UNLIT_CAR" Content="" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>

