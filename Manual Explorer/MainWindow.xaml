            <CheckBox Grid.Column="0" Grid.Row="23" x:Name="LIT_FRK" Content="" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>
