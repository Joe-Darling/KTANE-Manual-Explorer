            <Button Margin="0,-20" Grid.Row="0" Grid.Column="0" Height="25" Width="50" Click="PageTurnLeft" x:Name="PageLeft">
                <Image Source="http://www.clipartbest.com/cliparts/eTM/E58/eTME58BAc.png"/>
            </Button>
            <Button Margin="0,-20" Grid.Row="0" Grid.Column="23" Height="25" Width="50" Click="PageTurnRight" x:Name="PageRight">
