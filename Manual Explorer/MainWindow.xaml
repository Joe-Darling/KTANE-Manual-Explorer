            <CheckBox Grid.Column="1" Grid.Row="21" x:Name="UNLIT_NSA" Content="" HorizontalAlignment="Right" Margin="0,0,15,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>

