            <TextBlock Grid.Column="1" Grid.Row="7" x:Name="Battery_Holder_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <TextBlock Grid.Column="1" Grid.Row="8" x:Name="Total_Battery_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>

