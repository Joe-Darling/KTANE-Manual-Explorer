            <TextBlock Grid.Column="1" Grid.Row="10" x:Name="DVI_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <Button Grid.Column="1" Grid.Row="10" x:Name="ADD_DVI" Content="4" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>

            <TextBlock Grid.Column="1" Grid.Row="11" x:Name="Parallel_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <Button Grid.Column="1" Grid.Row="11" x:Name="SUB_Parallel" Content="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>
