            <CheckBox Grid.Column="0" Grid.Row="24" x:Name="LIT_FRQ" Content="" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>
            <CheckBox Grid.Column="0" Grid.Row="24" x:Name="UNLIT_FRQ" Content="" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>

            <CheckBox Grid.Column="0" Grid.Row="25" x:Name="LIT_IND" Content="" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>
            <CheckBox Grid.Column="0" Grid.Row="25" x:Name="UNLIT_IND" Content="" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>

            <CheckBox Grid.Column="1" Grid.Row="20" x:Name="LIT_MSA" Content="" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>
