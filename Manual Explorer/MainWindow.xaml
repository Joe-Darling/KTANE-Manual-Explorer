<Window x:Class="Manual_Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manual_Explorer"
        mc:Ignorable="d"
        Title="MainWindow" Name="MyWindow" Height="1080" Width="1920" KeyDown="ArrowControl" d:DesignWidth="1920" d:DesignHeight="1080">
    <!--<Window.Resources>
        <local:ResolutionWindow x:Key="resolutionWindow"/>
    </Window.Resources>-->
    <Window.Resources>
        <local:MainWindow x:Key="windowHeight"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewProfile"/>
                <MenuItem Header="_Open" Click="OpenProfile"/>
                <MenuItem Header="_Save" Click="SaveProfile"/>
                <MenuItem Header="Save As" Click="SaveProfileAs"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Connect">
                <MenuItem Header="_Connect" Click="OpenConnectionWindow"/>
                <MenuItem Header="Configure Pages" Click="ConfigurePages"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Change Resolution" Click="ChangeResolution"/>
            </MenuItem>
        </Menu>

        <Grid DockPanel.Dock="Left" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="20,20,20,-15">Find manual:</TextBlock>
            <ComboBox x:Name="User_Query" Margin="20,20" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="25" IsEditable="True" KeyDown="UpdateQuery" IsSynchronizedWithCurrentItem="False" IsTextSearchEnabled="False" SelectionChanged="OnSelected" KeyUp="BackspaceUpdate"/>
            <Button  Margin="20,20" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SaveCurrentModule">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Add</TextBlock>
                    <Image Grid.Row="0" Grid.Column="1" Source="https://cdn4.iconfinder.com/data/icons/ios7-essence/22/add_plus-512.png" Width="20"/>
                </Grid>
            </Button>
            <Button Margin="20,20" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="DeleteCurrentModule">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Delete</TextBlock>
                    <Image Grid.Row="0" Grid.Column="1" Source="https://cdn1.iconfinder.com/data/icons/materia-arrows-symbols-vol-1/24/018_004_minus_remove_substract_dash-512.png" Width="20"/>

                </Grid>
            </Button>
            <ListBox x:Name="History" Margin="20,20" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Width="200" SelectionChanged="History_Selected">
                <ListBox.Resources>
                    <ContextMenu x:Key="HistoryMenu">
                        <MenuItem Header="Configure Manual" Click="ConfigureManualPage"/>
                    </ContextMenu>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource HistoryMenu}"/>
                    </Style>
                </ListBox.Resources>
            </ListBox>
        </Grid>

        <Grid DockPanel.Dock="Right" x:Name="Right_Panel" Background="#FF818181" Height="Auto" Width="Auto">
            <!--<Grid x:Name="Right_Panel" Background="#FF818181">-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <!-- <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>-->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Column="0"  Grid.Row="0" Content="Starting Time:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="0" x:Name="Remaining_Time" HorizontalAlignment="Center" Text="0:00" TextWrapping="Wrap" VerticalAlignment="Center" Width="100" Height="22" Margin="0,0,10,0"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Modules:" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Margin="10,10,10,10"/>
            <TextBox Grid.Column="1" Grid.Row="1" x:Name="Total_Modules" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" Width="100" Height="22" Margin="0,0,10,0" />


            <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Click="ResetRightSideBar"/>
            <Label Grid.Column="0" Grid.Row="3" Content="Serial:" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="25" Margin="10,10,10,10"/>
            <TextBox Grid.Column="1" Grid.Row="3" x:Name="Serial_Number" HorizontalAlignment="Center" Text="######" TextWrapping="Wrap" VerticalAlignment="Center" Width="100" Height="22" FontSize="14" FontFamily="Consolas" GotFocus="SelectedSerialNumberBox" CharacterCasing="Upper"/>
            <!-- row 4 skipped for spacing -->
            <Label Grid.Column="0" Grid.Row="5" Content="AA Batteries:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="6" Content="D Batteries:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="7" Content="Battery Holders:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="8" Content="Total Batteries:" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button Grid.Column="1" Grid.Row="5" x:Name="SUB_AA" Content="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>
            <TextBlock Grid.Column="1" Grid.Row="5" x:Name="AA_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <Button Grid.Column="1" Grid.Row="5" x:Name="ADD_AA" Content="4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>
