            <Button Grid.Column="1" Grid.Row="12" x:Name="ADD_PS2" Content="4" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>

            <Button Grid.Column="1" Grid.Row="13" x:Name="SUB_RJ45" Content="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>
            <TextBlock Grid.Column="1" Grid.Row="13" x:Name="RJ45_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <Button Grid.Column="1" Grid.Row="13" x:Name="ADD_RJ45" Content="4" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>

            <Button Grid.Column="1" Grid.Row="14" x:Name="SUB_Serial" Content="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>
            <TextBlock Grid.Column="1" Grid.Row="14" x:Name="Serial_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <Button Grid.Column="1" Grid.Row="14" x:Name="ADD_Serial" Content="4" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>

            <Button Grid.Column="1" Grid.Row="15" x:Name="SUB_RCA" Content="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>
            <TextBlock Grid.Column="1" Grid.Row="15" x:Name="RCA_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>
            <Button Grid.Column="1" Grid.Row="15" x:Name="ADD_RCA" Content="4" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" FontFamily="Marlett" FontSize="20" Click="ChangeQuantity"/>

            <Label Grid.Column="0" Grid.Row="16" Content="Total Ports:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="16" x:Name="Total_Port_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>

            <Label Grid.Column="0" Grid.Row="17" Content="Total Port Plates:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="17" x:Name="Total_Port_Plates_Count" HorizontalAlignment="Center" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20"/>

            <!-- row 18 skipped for spacing -->

            <Label Grid.Column="0" Grid.Row="19" Content="Lit:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="19" Content="Unlit:" HorizontalAlignment="Right" Margin="0,0,-3,0" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="19" Content="Lit:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="19" Content="Unlit:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"/>

            <Label Grid.Column="0" Grid.Row="20" Content="BOB:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="21" Content="CAR:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="22" Content="CLR:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="23" Content="FRK:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="24" Content="FRQ:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="25" Content="IND:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="20" Content="MSA:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="21" Content="NSA:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="22" Content="SIG:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="23" Content="SND:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <Label Grid.Column="1" Grid.Row="24" Content="TRN:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center"/>

            <CheckBox Grid.Column="0" Grid.Row="20" x:Name="LIT_BOB" Content="" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>
