            <CheckBox Grid.Column="1" Grid.Row="24" x:Name="UNLIT_TRN" Content="" HorizontalAlignment="Right" Margin="0,0,15,0" VerticalAlignment="Center" Checked="ToggleIndicator" Unchecked="ToggleIndicator"/>

            <Label Grid.Column="0" Grid.Row="27" Content="Total:" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4"/>

            <Label Grid.Column="1" Grid.Row="26" Content="Lit:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="7,0,0,0"/>
            <Label Grid.Column="1" Grid.Row="26" Content="Unlit:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,0,0"/>

            <TextBlock Grid.Column="1" Grid.Row="27" x:Name="Total_Lit_Indicators" HorizontalAlignment="Left" Text="0" TextWrapping="Wrap" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="20"/>
